<div class="comment-form">
  <%= minimal_form_for comment,
                       url: order_comments_path,
                       method: 'post',
                       remote: true,
                       :html => {:class => 'form-vertical no-pjax'} do |f| %>

    <div class="comments-errors">
      <p></p>
    </div>

    <div class="controls controls-row">
      <%= f.input_field :body,
                        rows: '4',
                        placeholder: 'Message',
                        class: 'span5' %>
    </div>
    <%= f.input_field :commentable_id,
                      as: :hidden,
                      value: comment.commentable_id %>
    <%= f.input_field :commentable_type,
                      as: :hidden,
                      value: comment.commentable_type %>
    <%= f.input_field :order_step,
                      as: :hidden,
                      input_html: {value: comment.order_step} %>

    <%= f.button :submit,
                 class: 'btn btn-green',
                 disable_with: 'Submittingâ€¦' %>

  <% end %>
</div>