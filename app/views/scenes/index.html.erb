<h1>Listing scenes</h1>

<table>
  <tr>
    <th>Script</th>
    <th>Sequence position</th>
    <th>Storyboard</th>
    <th>English subtitle</th>
    <th>Foreign subtitle 1</th>
    <th>Foreign subtitle 2</th>
    <th>Remark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scenes.each do |scene| %>
  <tr>
    <td><%= scene.script_id %></td>
    <td><%= scene.sequence_position %></td>
    <td><%= scene.storyboard %></td>
    <td><%= scene.english_subtitle %></td>
    <td><%= scene.foreign_subtitle_1 %></td>
    <td><%= scene.foreign_subtitle_2 %></td>
    <td><%= scene.remark %></td>
    <td><%= link_to 'Show', scene %></td>
    <td><%= link_to 'Edit', edit_scene_path(scene) %></td>
    <td><%= link_to 'Destroy', scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

