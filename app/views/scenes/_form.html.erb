<%= simple_form_for(@scene) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :script_id %>
    <%= f.input :sequence_position %>
    <%= f.input :storyboard %>
    <%= f.input :english_subtitle %>
    <%= f.input :foreign_subtitle_1 %>
    <%= f.input :foreign_subtitle_2 %>
    <%= f.input :remark %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
