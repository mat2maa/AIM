<%= simple_form_for(@airline) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :logo, as: :file %>
    <%= f.input :livery, as: :file %>
    <%= f.input :branding, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
