<%= link_to image_tag('logo.png'), root_path, :class => 'brand' %>
<ul class="nav">
  <% if user_signed_in? %>
    <li>
        <%= link_to 'Logout', destroy_user_session_path, :method => 'delete', :class => 'no-pjax' %>
      </li>
  <% end %>
  <% if user_signed_in? %>
      <li>
        <%= link_to 'Edit account', edit_user_registration_path %>
      </li>
      <% if current_user.user_profile.present? %>
          <li>
            <%= link_to 'Edit user profile', edit_user_profile_path(id: current_user.user_profile.id) %>
          </li>
      <% else %>
          <li>
            <%= link_to 'Add user profile', new_user_profile_path %>
          </li>
      <% end %>
      <% if current_user.has_role? :admin %>
          <li>
            <%= link_to 'Admin', users_path %>
          </li>
      <% end %>
  <% end %>
</ul>
<a href="#menu" class="side-menu-link btn btn-mini" title="Click for sub-menu">
  <i class="icon-th"></i>
</a>
<div class="brand-text-outer pull-right">
  <span class="brand-text"><%= yield :order_title %></span>
</div>